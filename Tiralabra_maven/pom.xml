<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.mycompany</groupId>
  <artifactId>Tiralabra_maven</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Tiralabra_maven</name>
  <url>http://maven.apache.org</url>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  
<build>
    <plugins>
        <plugin>
             <groupId>org.apache.maven.plugins</groupId>
             <artifactId>maven-javadoc-plugin</artifactId>
             <version>2.9.1</version>
        </plugin> 
        
        <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
                <source>1.7</source>
                <target>1.7</target>
                <encoding>${project.build.sourceEncoding}</encoding>
            </configuration>
            <version>2.5</version>
        </plugin>
        
        <plugin>
            <groupId>org.pitest</groupId>
            <artifactId>pitest-maven</artifactId>
            <version>0.30</version>
            <configuration>
                <targetClasses>
                    <param>Apuvalineet.BinaariMuuntaja</param>
                    <param>Apuvalineet.Kirjoittaja</param>
                    <param>Tietorakenteet.MinKeko</param>
                    <param>Toteutus.Huffman.BittiEsitykset</param>
                    <param>Toteutus.Huffman.HuffmanPuu</param>
                    <param>Toteutus.TekstinLukija</param>     
                    <param>Toteutus.Huffman.Pakkaaminen.TiedostonPakkaaja</param>     
                    <param>Toteutus.Huffman.Purkaminen.TiedostonPurkaja</param>           
                </targetClasses>
                <targetTests>
                    <param>Apuvalineet.BinaariMuuntajaTest</param>
                    <param>Apuvalineet.KirjoittajaTest</param>
                    <param>Tietorakenteet.MinKekoTest</param>
                    <param>Toteutus.Huffman.BittiEsityksetTest</param>
                    <param>Toteutus.Huffman.HuffmanPuuTest</param>
    
                    <param>Toteutus.Huffman.Pakkaaminen.TiedostonPakkaajaTest</param>     
                    <param>Toteutus.Huffman.Purkaminen.TiedostonPurkajaTest</param>   
                </targetTests>
            </configuration>
        </plugin>
        <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-resources-plugin</artifactId>
            <version>2.4.3</version>
            <configuration>
                <encoding>${project.build.sourceEncoding}</encoding>
            </configuration>
        </plugin>
    </plugins>
</build>
</project>
