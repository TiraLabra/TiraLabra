-- Initial TiraLabra.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                TiraLabra
version:             0.1.0.0
license:             BSD3
license-file:        LICENSE
author:              Samuli Thomasson
maintainer:          simsaladin@paivola.fi
-- copyright:           
-- category:            
build-type:          Simple
extra-source-files:  Readme.md
cabal-version:       >=1.10
synopsis:            Mahjong hands
description:
   This library implements data structures and algorithms to
   work with a mahjong hand.

library
  exposed-modules:     Mahjong.Hand
                     , Mahjong.Hand.Algo
                     , Mahjong.Hand.Algo.WaitTree
                     , Mahjong.Hand.Mentsu
                     , Mahjong.Hand.Value
                     , Mahjong.Tiles
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.7 && <4.8
                     , containers
                     , semigroups
                     , bifunctors
                     , ansi-wl-pprint
                     , utility-ht
  hs-source-dirs:      src
  default-language:    Haskell2010

executable mahjong-hand
  main-is:             main.hs
  build-depends:       base, TiraLabra, ansi-wl-pprint
  default-language:    Haskell2010

test-suite test
  type:                exitcode-stdio-1.0
  main-is:             test.hs
  hs-source-dirs:      tests
  build-depends:       base
                     , containers
                     , TiraLabra
                     , tasty
                     , tasty-quickcheck
                     , tasty-hunit
  default-language:    Haskell2010

flag benchmarkBuildGWT
   description: Benchamrk only the *slow* buildGWT's
   default:     False

benchmark algo
   type:               exitcode-stdio-1.0
   main-is:            benchmark.hs
   hs-source-dirs:     tests
   build-depends:      base
                     , TiraLabra
                     , tasty
                     , tasty-quickcheck
                     , criterion >= 1.0 && < 1.1
                     , deepseq
                     , deepseq-generics
                     , semigroups
   default-language:   Haskell2010

   if flag(benchmarkBuildGWT)
      cpp-options: -DGWT_ONLY
