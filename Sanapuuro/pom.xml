<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>sanapuuro</groupId>
    <artifactId>Sanapuuro</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Sanapuuro</name>
    <url>http://maven.apache.org</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.10</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
                <version>2.5</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <configuration>
                    <instrumentation>
                        <includes>
                            <include>sanapuuro.sanapuuro/*.class</include>
                            <include>sanapuuro.sanapuuro.grid/*.class</include>
                            <include>sanapuuro.sanapuuro.words/*.class</include>
                            <include>sanapuuro.sanapuuro.letters/*.class</include>
                            <include>sanapuuro.sanapuuro.readers/*.class</include>
                        </includes>
                    </instrumentation>
                </configuration>
                <version>2.6</version>
            </plugin>
            <plugin>
                <groupId>org.pitest</groupId>
                <artifactId>pitest-maven</artifactId>
                <version>0.30</version>
                <configuration>
                    <targetClasses>
                        <param>sanapuuro.sanapuuro.Game</param>
                        <param>sanapuuro.sanapuuro.Player</param>
                        <param>sanapuuro.sanapuuro.grid.*</param>
                        <param>sanapuuro.sanapuuro.words.*</param>
                        <param>sanapuuro.sanapuuro.letters.*</param>
                        <param>sanapuuro.sanapuuro.readers.*</param>
                    </targetClasses>
                    <targetTests>
                        <param>sanapuuro.sanapuuro.GameTest</param>
                        <param>sanapuuro.sanapuuro.PlayerTest</param>
                        <param>sanapuuro.sanapuuro.grid.*</param>
                        <param>sanapuuro.sanapuuro.words.*</param>
                        <param>sanapuuro.sanapuuro.letters.*</param>
                        <param>sanapuuro.sanapuuro.readers.*</param>
                    </targetTests>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>sanapuuro.sanapuuro.gui.GameWindow</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin> 
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>sanapuuro.sanapuuro.gui.GameWindow</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
